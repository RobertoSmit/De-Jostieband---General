{
  "compilerOptions": {
    "target": "ES6",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "out": "build/app.js",
    "noEmitOnError": true,
    "newLine": "lf"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}